{
  "name": "htmlnano",
  "version": "2.1.2",
  "description": "Modular HTML minifier, built on top of the PostHTML",
  "author": "Kirill Maltsev <maltsevkirill@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "npm run clean && bunchee",
    "lint": "eslint --fix src/*.mjs src/**/*.mjs test/*.mjs test/**/*.mjs",
    "pretest": "npm run lint && npm run compile",
    "test": ":",
    "posttest": "mocha --timeout 5000 --require @swc-node/register --recursive --check-leaks --globals addresses",
    "prepare": "npm run compile"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "./helpers": {
      "import": "./dist/helpers.mjs",
      "require": "./dist/helpers.js"
    },
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./presets/ampSafe": {
      "import": "./dist/presets/ampSafe.mjs",
      "require": "./dist/presets/ampSafe.js"
    },
    "./presets/max": {
      "import": "./dist/presets/max.mjs",
      "require": "./dist/presets/max.js"
    },
    "./presets/safe": {
      "import": "./dist/presets/safe.mjs",
      "require": "./dist/presets/safe.js"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": 10
          }
        }
      ]
    ],
    "plugins": [
      [
        "@aminya/babel-plugin-replace-import-extension",
        {
          "extMapping": {
            ".mjs": ".cjs"
          }
        }
      ]
    ]
  },
  "keywords": [
    "posthtml",
    "posthtml-plugin",
    "html",
    "postproccessor",
    "minifier"
  ],
  "dependencies": {
    "cosmiconfig": "^9.0.0",
    "posthtml": "^0.16.5"
  },
  "devDependencies": {
    "@aminya/babel-plugin-replace-import-extension": "1.2.0",
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.27.1",
    "@swc-node/register": "^1.10.10",
    "bunchee": "^6.5.1",
    "cssnano": "^7.0.0",
    "eslint": "^8.12.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-path-import-extension": "^0.9.0",
    "expect": "^29.0.0",
    "mocha": "^11.0.1",
    "postcss": "^8.3.11",
    "purgecss": "^7.0.2",
    "relateurl": "^0.2.7",
    "rimraf": "^6.0.0",
    "srcset": "5.0.1",
    "svgo": "^3.0.2",
    "terser": "^5.21.0",
    "typescript": "^5.8.3",
    "uncss": "^0.17.3"
  },
  "peerDependencies": {
    "cssnano": "^7.0.0",
    "postcss": "^8.3.11",
    "purgecss": "^7.0.2",
    "relateurl": "^0.2.7",
    "srcset": "5.0.1",
    "svgo": "^3.0.2",
    "terser": "^5.10.0",
    "uncss": "^0.17.3"
  },
  "peerDependenciesMeta": {
    "cssnano": {
      "optional": true
    },
    "postcss": {
      "optional": true
    },
    "purgecss": {
      "optional": true
    },
    "relateurl": {
      "optional": true
    },
    "srcset": {
      "optional": true
    },
    "svgo": {
      "optional": true
    },
    "terser": {
      "optional": true
    },
    "uncss": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/posthtml/htmlnano.git"
  },
  "bugs": {
    "url": "https://github.com/posthtml/htmlnano/issues"
  },
  "homepage": "https://github.com/posthtml/htmlnano"
}
